                    <TextBlock
                        VerticalAlignment="Center"
                        Text="MBI" />

                    <Button
                        Margin="10 5 0 5"
                        Command="{Binding OpenMbiPdfCommand}">
                        <Image
                            Width="{StaticResource IconButtonSize}"
                            Source="{StaticResource PdfIcon}" />
                    </Button>
                </WrapPanel>

                <TextBox Margin="10 10 30 10"
                         Grid.Row="3"
                         Grid.Column="1"
                         Text="{Binding Formulaire.Mbi}"/>

